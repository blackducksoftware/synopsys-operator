{
  "MasterURL": "",
  "KubeConfigPath": "",

  "Hub": {
    "User": "sysadmin",
    "Password": "duck",
    "Port": 443
  },

  "Perceptor": {
    "HubClientTimeoutMilliseconds": 120000,
    "ConcurrentScanLimit": 4,
    "TotalScanLimit": 15,
    "ServiceName": "perceptor",
    "Port": 3001,
    "UseMockMode": false
  },

  "ImagePerceiver": {
    "Port": 4003,
    "AnnotationIntervalSeconds": 30,
    "DumpIntervalMinutes": 30
  },

  "PodPerceiver": {
    "Port": 4008,
    "ReplicationCount": 1,
    "AnnotationIntervalSeconds": 180,
    "DumpIntervalMinutes": 30
  },

  "ScannerPod": {
    "Name": "my-first-scanner-pod",
    "ReplicationCount": 1,
    "ImageDirectory": "/var/images"
  },

  "Scanner": {
    "Port": 3777,
    "Memory": "5Gi",
    "JavaInitialHeapSizeMBs": 64,
    "JavaMaxHeapSizeMBs": 1024
  },

  "ImageFacade": {
    "Port": 3931
  },

  "Skyfire": {
    "Port": 3187
  },

  "HubPasswordSecretName": "hub-password",
  "HubPasswordSecretKey": "hub-user-password",

  "LogLevel": "debug"
}
